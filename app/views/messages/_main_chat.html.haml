.main-chat
  .main-chat__group-info
    .main-chat__group-info__left
      .list
        = @group.name
        .member
          Member:
          - @group.users.each do |user|
            = user.name 
    .main-chat__group-info__right
      .main-chat__group-info__right__edit
        = link_to "Edit" ,edit_group_path(@group)

  .main-chat__message-list
    .messages
      = render @messages

  .main-chat__message-form
    = form_for [@group, @message] do |f|
      .main-chat__message-form__make__edit
        .main-chat__message-form__make__edit__text
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .main-chat__message-form__make__edit__image
          = f.label :image, class: 'input-box__image' do
            = icon('far', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
